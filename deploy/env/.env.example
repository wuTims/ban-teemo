# =============================================================================
# Backend Environment Variables
# =============================================================================
# Copy this file to .env in the project root for local development
# For production (Render), set these in the dashboard as environment variables
#
# SECURITY: Never commit .env files with real values to version control

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Enable debug mode (shows detailed error messages)
DEBUG=false

# Server host and port (Render sets PORT automatically)
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Local development + production frontend

CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://your-app.pages.dev

# -----------------------------------------------------------------------------
# Data Configuration
# -----------------------------------------------------------------------------
# Path to the data directory containing DuckDB database and CSV files
# Relative to project root

DATA_PATH=outputs/full_2024_2025_v2/csv

# -----------------------------------------------------------------------------
# LLM Provider API Keys (Optional)
# -----------------------------------------------------------------------------
# These enable AI-powered draft recommendations
# Leave empty to disable LLM features

# Nebius (DeepSeek, Qwen models)
NEBIUS_API_KEY=

# Groq (Llama, Mixtral models)
GROQ_API_KEY=

# Together AI (various open models)
TOGETHER_API_KEY=

# Tavily (web search enrichment)
TAVILY_API_KEY=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable LLM-powered recommendations
ENABLE_LLM=true
